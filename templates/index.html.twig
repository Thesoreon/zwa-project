{% extends 'base.html.twig' %}

{% block title %}Stardew Valley{% endblock %}

{% block content %}
<div id="content-mount">
    <h1>Stardew Valley Save Scraper</h1>
    <a href="/save/upload">Upload new Save</a>
    <a href="/login">Login</a>
    <a href="/register">Signup</a>

    {% for save in saveFiles %}
        <div>
            <h2>{{ save.worldData.name }}</h2>
            <span>Uploaded: {{ save.createdAt|date("d.m.y H:i:s") }}</span>
            <span>Money: {{ save.worldData.money }}</span>
        </div>
    {% endfor %}
</div>
{% endblock %}
