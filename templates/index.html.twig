{% extends 'base.html.twig' %}

{% block title %}Stardew Valley{% endblock %}

{% block content %}
<main class="bg-gray-200 max-w-5xl mx-auto p-4">
    <h2 class="text-2xl font-bold">Nejnovější světy</h2>
    {% for save in saveFiles %}
        <article class="flex flex-col bg-white mt-4 p-4 shadow-sm">
            <h3>{{ save.worldData.name }}</h3>
            <time>Datum nahrání: {{ save.createdAt|date("d.m.y H:i:s") }}</time>
            <span>Peníze: {{ save.worldData.money }}</span>
            <span>Nahráno uživatelem: {{ save.author.email }}</span>
        </article>
    {% endfor %}
    {{ knp_pagination_render(saveFiles, "pagination/pagination.html.twig") }}
</main>
{% endblock %}
